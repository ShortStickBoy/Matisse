<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/album_item_height">

    <com.sunzn.matisse.library.internal.ui.widget.RoundedRectangleImageView
        android:id="@+id/album_cover"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:background="#b2b2b2"
        android:padding="1px" />

    <TextView
        android:id="@+id/album_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/album_cover"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?attr/album_dropdown_title_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/album_media_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:drawableEnd="@drawable/ic_album_sorrow"
        android:drawablePadding="5dp"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:textColor="?album_dropdown_count_color"
        android:textSize="14sp" />

</RelativeLayout>